# editorconfig.org
# top-most EditorConfig file
root = true

[*]
# 2 space indentation
indent_style = space
indent_size = 2
# Unix-style newlines with a newline ending every file
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.php]
insert_final_newline = false
